#!/usr/bin/perl

# Only for Development
use FindBin qw($Bin);
use lib "$Bin/../lib";

# Don't edit the line below, it must look exactly like this.
# Everything above this line will be replaced #


# This script is just an alias for update_inits. 
# It makes it possible to call versioned update scripts
# For example: update-4.2.0 will call update_inits-4.2.0

use utils::file;

my $version;

my $filename = utils::file::remove_path($0);
my $path = utils::file::directory($0);

my @name_and_version = split '-', $filename;

if ($name_and_version[1]) {
	$version = '-' . $name_and_version[1];
    $version =~ s/\.pl$//;
}

my $command = "${path}update_inits$version @ARGV";

system $command;
